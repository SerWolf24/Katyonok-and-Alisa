<context>

    <sample>
        <item value="Как снизить вес?"/>
        <item value="Мне нужно похудеть!"/>
    </sample>

    <input pattern="* (привет*|здравствуй*|хай|хой|*даров*|доброе утро|добрый вечер|добрый день) *">
        <output if="full($UserName)">
            <item value="Привет, $UserName! Рада снова видеть вас!"/>
            <item value="Хаай, $UserName!"/>
            <item value="Муррр-мур"/>            
            <item value="Здравствуйте, $UserName! Я уже успела соскучиться..."/>
        </output>

        <context if="empty($UserName)" id="name">
            <output value="Привет! Меня зовут Алиса! А это - демонстрация моего навыка, созданного для людей, которые хотят хорошо себя чувствовать, хорошо выглядеть и корректировать фигуру. Как вас зовут?"/>

            <input pattern="$Text">
                <var name="UserName" value="cap($Text)" scope="user"/>
                <output value="Приятно познакомиться, $UserName! Интересует вас что-нибудь из этого? Желаете снизить вес? Может быть улучшить самочувствие? Набрать мышечную массу? Или просто хотите разобраться в питании?"/>
                <context/>
            </input>
        </context>
    </input>
    
    <input pattern="* (похудеть|схуднуть|снизить вес|убрать жир|избавиться * веса) *">
        <var name="end_session" value="javascript: true"/>
        <output value="Свяжитесь с консультантом!" if="empty($UserName)"/>
        <output value="$UserName, за более подробной информацией обратитесь к консультанту по питанию!"/>
    </input>


    <input pattern="[* remind* [me]] { [[to] $Text] [$Date] [$Time] }">
        <!-- Jump to the reminder creation if Text and Time have been provided -->
        <context id="reminder" if="full($Text) and full($Time)"/>

        <!-- Ask for reminder text if it was not provided -->
        <context if="empty($Text)" modal="true"> <!-- This context is modal because any text must be interpreted as reminder text -->
            <output value="What would you like me to remind you about?"/>

            <input pattern="$Text">
                <context id="reminder_time" if="empty($Time)"/> <!-- Ask for the Date and Time -->
                <context id="reminder"/> <!-- Or create a reminder if the Time was provided -->
            </input>
        </context>

        <!-- Ask for the Time if it was not provided -->
        <context id="reminder_time" if="empty($Time)">
            <!-- The user may provide both Date and Time -->
            <output value="When should I remind you about this?" if="empty($Date)"/>

            <!-- Or ask only for the Time if the Date was provided -->
            <output value="Please tell me the reminder time"/>

            <input>
                <pattern value="* {(* $Time) [$Date]} *"/>
                <pattern value="* $Date *"/>

                <context id="reminder_time" if="empty($Time)"/> <!-- Ask for Time -->
                <context id="reminder"/> <!-- Or create a reminder -->
            </input>
        </context>

        <!-- This context contains no inputs, it only contains actions -->
        <context id="reminder">
            <!-- Format date string if it is not empty -->
            <var name="Fmt" value='fmt($Date, "EEEE, MMMM dd", $req_lang)' if="full($Date)"/>

            <!-- Just response with text, date and time of a new reminder -->
            <output value='OK, I will remind you "$Text" on $Fmt at $Time'/>
        </context>
    </input>

    <input pattern="* (пока*|до свидания*|прощай*|замолчи*|заткни*сь) *">
        <var name="end_session" value="javascript: true"/>
        <output value="Ну пока, незнакомый человек!" if="empty($UserName)"/>
        <output value="Пока-пока, $UserName!"/>
        <output value="До встречи, $UserName!"/>
    </input>

</context>
